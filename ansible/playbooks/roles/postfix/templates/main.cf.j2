smtpd_banner = $myhostname ESMTP $mail_name
biff = no

# appending .domain is the MUA's job.
append_dot_mydomain = no

# Uncomment the next line to generate "delayed mail" warnings
#delay_warning_time = 4h

readme_directory = no

# TLS parameters
smtpd_tls_cert_file = /etc/ssl/certs/ssl-cert-snakeoil.pem
smtpd_tls_key_file = /etc/ssl/private/ssl-cert-snakeoil.key
smtpd_use_tls = yes
smtpd_tls_session_cache_database = lmdb:${data_directory}/smtpd_scache
smtp_tls_session_cache_database = lmdb:${data_directory}/smtp_scache

myhostname = {{ ansible_hostname }}
alias_maps = lmdb:/etc/aliases
alias_database = lmdb:/etc/aliases
myorigin = {{ ansible_fqdn }}

{% if ansible_fqdn != ansible_hostname -%}
mydestination = {{ ansible_fqdn }}, {{ ansible_hostname }}, localhost.localdomain, localhost
{% else -%}
mydestination = {{ ansible_hostname }}, localhost.localdomain, localhost
{%- endif %}

smtpd_recipient_restrictions = permit_mynetworks,reject
smtpd_relay_restrictions = permit_sasl_authenticated,reject

{% if mail_relay -%}
relayhost = {{ mail_relay }}
{% endif -%}
mynetworks = 127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128
mailbox_size_limit = 0
recipient_delimiter = +
inet_interfaces = loopback-only

{% if ansible_os_family == 'Suse' %}
setgid_group = maildrop
daemon_directory = /usr/lib/postfix/bin/
{% endif %}
